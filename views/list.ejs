<%- include("header") -%> 


  <body>

    <div class="box" id="heading">
      <h1><%= listHeading %></h1>
    </div>
    
    <div class="box">
      
      <% if (isDefaltList) { %>
        <% listHeading = "/"; %>
      <% } %>

      <% listItems.forEach(item => { %>
        <form action="/delet" method="post">
          <div class="item">
            <input type="checkbox" name="itemId" value="<%= item._id %>" onchange="this.form.submit()">
            <p><%= item.name %></p>
          </div>
          <input type="hidden" name="listName" value="<%= listHeading %>">
        </form>
      <% }); %>
      
      <form class="item" action="/"  method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off", autofocus="on">
        <button type="submit" name="list" value="<%= listHeading %>">+</button>
      </form>
    </div>
  
  </body>


<%- include("footer") -%> 